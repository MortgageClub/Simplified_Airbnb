<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to  "Your Listing", rooms_path, class: "sidebar-link" %>
      </li>
      <li class="sidebar-item">
        <%= link_to  "Your Reservations", rooms_path, class: "sidebar-link" %>
      </li>
      <li class="sidebar-item">
        <%= link_to  "Your Trips", your_trips_path, class: "sidebar-link active" %>
      </li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel panel-heading">
        Your Trips
      </div>
      <div class="panel panel-body">
        <% @trips.each do |trip|%>
          <div class="row">
            <div class="col-md-2">
              <%= trip.start_date.strftime('%v') %>
            </div>
            <div class="col-md-6">
              <%= link_to room_path(trip.room) do %>
                <%= image_tag trip.room.photos.first.image.url(:thumb) unless trip.room.photos.empty? %>
              <% end %>
            </div>
            <div class="col-md-2">
              <%= link_to user_path(trip.room.user) do %>
                <%= image_tag avatar_url(trip.room.user), class: "img-circle avatar-medium" %>
              <% end %>
            </div>
            <div class="col-md-2">
            <%= trip.total %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>